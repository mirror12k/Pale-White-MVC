
!template TestTemplate
	html
		head
			!block head
		body
			div
			div#container
				div.text.asdf
					a href="http://example.org", alt="a link to {{name}} from {{source}}"
						p "hello world {{name}}!"
			div.close#footer
	!block tail
		p
			"test {{tail}} lol"
	!block mid
		div.container
			p "in a container"
	!block midend
		div class={dynamic} {dynamic}


!template MoreTemplate extends TestTemplate
	!block head
		title {title}

!template LinkTemplate
	a href={link.link}, id={link.id} "click me"

!template NotFoundTemplate
	html
		body
			p "404 Not Found"
